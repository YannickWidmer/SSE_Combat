<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bckgrnd"
    android:padding="@dimen/view_padding">

    <TextView
        android:id="@+id/name"
        style="@style/BaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name" />

    <TextView
        android:id="@+id/tick"
        style="@style/BaseTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:padding="@dimen/view_padding"
        android:text="wewfewfew" />

    <ch.widmer.yannick.ssecombat.JaugeView
        android:id="@+id/vie"
        style="@style/BaseText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        app:background_color="@color/red"
        app:foreground_color="@color/green" />

    <ch.widmer.yannick.ssecombat.JaugeView
        android:id="@+id/stamina"
        style="@style/BaseText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/vie"
        android:layout_marginTop="@dimen/view_padding"
        app:background_color="@color/red"
        app:foreground_color="@color/blue" />
</RelativeLayout>