<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/view_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        style="@style/BaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Name"/>
    <TextView
        android:id="@+id/tick"
        style="@style/BaseTextNumber"
        android:padding="@dimen/view_padding"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wewfewfew"/>
   <ch.widmer.yannick.ssecombat.JaugeView
        android:id="@+id/vie"
       android:layout_below="@id/name"
        android:layout_alignParentRight="true"
        style="@style/BaseText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:foreground_color="@color/green"
        app:background_color="@color/red"/>
    <ch.widmer.yannick.ssecombat.JaugeView
        android:id="@+id/stamina"
        android:layout_below="@id/vie"
        android:layout_alignParentRight="true"
        style="@style/BaseText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding"
        app:foreground_color="@color/blue"
        app:background_color="@color/red"/>
</RelativeLayout>