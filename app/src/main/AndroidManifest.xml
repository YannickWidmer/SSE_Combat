<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.widmer.yannick.ssecombat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dialogs.DialogNewPC"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SSEBaseDialog" />
        <activity android:name=".dialogs.DialogNewBeast"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SSEBaseDialog" />

        <activity android:name=".dialogs.DialogModifPc"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SSEBaseDialog" />
        <activity android:name=".dialogs.DialogModifBeast"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SSEBaseDialog" />
        <activity android:name=".dialogs.DialogAction"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SSEBaseDialog" />

    </application>

</manifest>